@model Dapper_proj.Models.Tennisist

@{
    ViewData["Title"] = "Редактировать данные клиента";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-controller="Home" method="post">
    <div>
        <input type="hidden" asp-for="Tennisist_id" />

        <div class="form-group">
            <label asp-for="Sername"></label>
            <input type="text" asp-for="Sername" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Citizenship"></label>
            <input asp-for="Citizenship" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Global_rating"></label>
            <input asp-for="Global_rating" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Birth"></label>
            <input asp-for="Birth" class="form-control" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
